<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/even_darker_purple"
    android:padding="5dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/even_darker_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.finalprojectaibetter.RoundImageView
                android:id="@+id/round_image_user"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/pay_transfer" />

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gabriel"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/transaction_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date_time"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/amount_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/_1000"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>