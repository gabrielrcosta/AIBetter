<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background11"
    tools:context=".UserDetails">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_center"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:backgroundTint="@color/gray_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.finalprojectaibetter.RoundImageView
        android:id="@+id/user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/aibetterlogo"
        app:layout_constraintEnd_toEndOf="@+id/card_center"
        app:layout_constraintStart_toStartOf="@+id/card_center"
        app:layout_constraintTop_toTopOf="@+id/card_center" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_first_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@+id/card_center"
        app:layout_constraintStart_toStartOf="@+id/card_center"
        app:layout_constraintTop_toBottomOf="@+id/user_image" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:text="@string/first_name"
        android:textColor="@color/african_violet"
        android:background="@color/gray_light"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/card_first_name"
        app:layout_constraintEnd_toEndOf="@id/card_first_name"
        app:layout_constraintStart_toStartOf="@id/card_first_name"
        app:layout_constraintTop_toTopOf="@+id/card_first_name" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_last_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/card_first_name"
        app:layout_constraintStart_toStartOf="@id/card_first_name"
        app:layout_constraintTop_toBottomOf="@+id/card_first_name" />

    <TextView
        android:id="@+id/last_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:text="@string/last_name"
        android:textColor="@color/african_violet"
        android:background="@color/gray_light"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/card_last_name"
        app:layout_constraintStart_toStartOf="@id/card_last_name"
        app:layout_constraintTop_toTopOf="@id/card_last_name"
        app:layout_constraintBottom_toBottomOf="@id/card_last_name" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/card_last_name"
        app:layout_constraintStart_toStartOf="@id/card_last_name"
        app:layout_constraintTop_toBottomOf="@+id/card_last_name" />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:text="@string/e_mail"
        android:textColor="@color/african_violet"
        android:background="@color/gray_light"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/card_email"
        app:layout_constraintStart_toStartOf="@id/card_email"
        app:layout_constraintTop_toTopOf="@id/card_email"
        app:layout_constraintBottom_toBottomOf="@id/card_email" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_password"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/card_email"
        app:layout_constraintStart_toStartOf="@id/card_email"
        app:layout_constraintTop_toBottomOf="@+id/card_email" />

    <TextView
        android:id="@+id/user_id_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:text="@string/user_id"
        android:textColor="@color/african_violet"
        android:background="@color/gray_light"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/card_password"
        app:layout_constraintStart_toStartOf="@+id/card_password"
        app:layout_constraintTop_toTopOf="@+id/card_password"
        app:layout_constraintBottom_toBottomOf="@id/card_password" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/home_balance_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/balance_page_icon"
            android:src="@drawable/new_account_balance_24" />

        <ImageView
            android:id="@+id/tranfers_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/transfers_icon"
            android:src="@drawable/new_double_arrow_24" />

        <ImageView
            android:id="@+id/cards_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/cards_icon"
            android:src="@drawable/new_credit_card_24" />

        <ImageView
            android:id="@+id/products_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/products_icon"
            android:src="@drawable/outline_shopping_cart_24" />

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/settings_icon"
            android:src="@drawable/new_settings_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>