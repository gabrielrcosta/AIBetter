<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background11"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/sign_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="@color/african_violet"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/round_card"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:backgroundTint="@color/gray_theme"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_first_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/round_card"
        app:layout_constraintStart_toStartOf="@id/round_card"
        app:layout_constraintTop_toTopOf="@+id/round_card" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:autofillHints="username"
        android:background="@color/gray_light"
        android:hint="@string/first_name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/african_violet"
        app:layout_constraintBottom_toBottomOf="@id/card_first_name"
        app:layout_constraintEnd_toEndOf="@id/card_first_name"
        app:layout_constraintStart_toStartOf="@id/card_first_name"
        app:layout_constraintTop_toTopOf="@+id/card_first_name" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_last_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/card_first_name"
        app:layout_constraintStart_toStartOf="@id/card_first_name"
        app:layout_constraintTop_toBottomOf="@+id/card_first_name" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:hint="@string/last_name"
        android:background="@color/gray_light"
        android:textAlignment="center"
        android:textColorHint="@color/african_violet"
        app:layout_constraintEnd_toEndOf="@id/card_last_name"
        app:layout_constraintStart_toStartOf="@id/card_last_name"
        app:layout_constraintTop_toTopOf="@id/card_last_name"
        app:layout_constraintBottom_toBottomOf="@id/card_last_name"
        android:autofillHints="username"
        android:inputType="text" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/card_last_name"
        app:layout_constraintStart_toStartOf="@id/card_last_name"
        app:layout_constraintTop_toBottomOf="@+id/card_last_name" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:hint="@string/enter_your_email"
        android:textAlignment="center"
        android:background="@color/gray_light"
        android:textColorHint="@color/african_violet"
        app:layout_constraintEnd_toEndOf="@id/card_email"
        app:layout_constraintStart_toStartOf="@id/card_email"
        app:layout_constraintTop_toTopOf="@id/card_email"
        app:layout_constraintBottom_toBottomOf="@id/card_email"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_password"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/card_email"
        app:layout_constraintStart_toStartOf="@id/card_email"
        app:layout_constraintTop_toBottomOf="@+id/card_email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:hint="@string/password"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:background="@color/gray_light"
        android:textColorHint="@color/african_violet"
        app:layout_constraintEnd_toEndOf="@+id/card_password"
        app:layout_constraintStart_toStartOf="@+id/card_password"
        app:layout_constraintTop_toTopOf="@+id/card_password"
        app:layout_constraintBottom_toBottomOf="@id/card_password"
        android:autofillHints="password" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_rep_password"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/gray_light"
        app:layout_constraintEnd_toEndOf="@id/card_password"
        app:layout_constraintStart_toStartOf="@id/card_password"
        app:layout_constraintTop_toBottomOf="@+id/card_password" />

    <EditText
        android:id="@+id/password_confirmed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@color/gray_light"
        android:hint="@string/repeat_password"
        android:textAlignment="center"
        android:inputType="numberPassword"
        android:textColorHint="@color/african_violet"
        app:layout_constraintEnd_toEndOf="@+id/card_rep_password"
        app:layout_constraintStart_toStartOf="@+id/card_rep_password"
        app:layout_constraintTop_toTopOf="@+id/card_rep_password"
        app:layout_constraintBottom_toBottomOf="@id/card_rep_password"
        android:autofillHints="password" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginVertical="20dp"
        android:text="@string/sign_up"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/password_confirmed"
        app:layout_constraintStart_toStartOf="@+id/password_confirmed"
        app:layout_constraintTop_toBottomOf="@+id/password_confirmed" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:text="@string/already_have_an_account"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/african_violet"
        app:layout_constraintBottom_toBottomOf="@id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>